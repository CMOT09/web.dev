<span class="post-signpost__title">
  {% set currentPageData = {lang: lang, url: page.url} %}
  {% set Languages = languaugeSupport(currentPageData) %}
  {% set numberOfLanguages = Languages.length %}

  {% if (numberOfLanguages !== 0) %}
    {{'i18n.post.available_in' | i18n(locale)}}:

    {% for language in Languages %}
      {% set lang = language[0] %}
      {% set langHref = language[1] %}
      {% set langName = language[2] %}

      <span>
        <a href={{langHref}} class="post-signpost__link" translate="no" lang={{lang}}>{{langName}}</a>
        {%- if loop.index !== numberOfLanguages -%}, {%- endif -%}
        {% if loop.index === (numberOfLanguages - 1) %} and {% endif %}
      </span>
    {% endfor %}
  {% endif %}
</span>